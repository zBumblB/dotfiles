#!/bin/sh

len=25

[ "$1" = "inc" ] && amixer set Master "$((100 / $len))%+"
[ "$1" = "dec" ] && amixer set Master "$((100 / $len))%-"
[ "$1" = "toggle" ] && amixer set Master toggle && exit

vol=$(amixer get Master | awk -F"[][]" '/Mono:/ { print $2 }')
vol=${vol%?} # remove % sign
n=$(echo $vol | awk "{print $len / 100 * \$1}")
dunstify -r 13579 $(printf '%.0sâ€•' `seq $n`)
